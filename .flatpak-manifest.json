{
    "id": "org.kde.koko",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "koko",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--env=XDG_DATA_DIRS=/usr/share:/app/share/",
        "--filesystem=home",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "modules": [
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DEXIV2_ENABLE_INIH:BOOL=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/archive/refs/tags/v0.28.7.tar.gz",
                    "sha256": "5e292b02614dbc0cee40fe1116db2f42f63ef6b2ba430c77b614e17b8d61a638",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 769,
                        "stable-only": true,
                        "url-template": "https://github.com/Exiv2/exiv2/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_WITH_DEBUG_INFO=ON",
                "-DBUILD_LIST=core,imgproc",
                "-DBUILD_JAVA=OFF",
                "-DBUILD_PERF_TESTS=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_opencv_apps=OFF"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/opencv/opencv.git",
                    "tag": "4.9.0"
                }
            ]
        },
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kquickimageeditor"
                }
            ]
        },
        {
            "name": "koko",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
